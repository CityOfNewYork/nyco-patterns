{
  "name": "nyco-patterns",
  "version": "1.5.1",
  "description": "NYC.gov Agency Styles and Extension",
  "author": "The Mayor's Office for Economic Opportunity",
  "license": "GPL-3.0+",
  "homepage": "https://cityofnewyork.github.io/nyco-patterns/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfNewYork/nyco-patterns.git"
  },
  "bugs": {
    "url": "https://github.com/CityOfNewYork/nyco-patterns/issues"
  },
  "main": "npm run start",
  "scripts": {
    "test": "",
    "start": "cross-env PORT=8000 concurrently \"npm:*:watch\" \"npm:serve\" \"npm:sync\"",
    "predeploy": "cross-env NODE_ENV=production concurrently \"npm:svgs\" \"npm:styles\" \"npm:scripts\" \"npm:build\"",
    "predeploy:commit": "git checkout package.json && git add \"./*\" && git commit -m \"Updating dist\"",
    "serve": "cross-env PORT=8000 node .app/serve.js --ext slm --watch src",
    "build": "node .app/build.js",
    "build:watch": "nodemon --ext slm --watch src -x \"npm run build\"",
    "publish": "npm run build && node .app/publish.js",
    "scripts": "rollup -c ./config/rollup.js",
    "scripts:watch": "rollup -c ./config/rollup.js -w",
    "sync": "browser-sync start --files \"dist\" --no-open --no-ui --proxy \"http://localhost:8000\"",
    "styles": "npm run styles:variables && npm run styles:sass && npm run styles:postcss",
    "styles:variables": "node .app/variables.js",
    "styles:sass": "node .app/sass.js",
    "styles:postcss": "node .app/postcss.js",
    "styles:watch": "nodemon --ext scss --watch src --ignore _variables.scss -x \"npm run styles\"",
    "svgs": "npm run svgs:optimize && npm run svgs:symbol",
    "svgs:optimize": "svgo -f ./src/svg -o ./dist/svg",
    "svgs:symbol": "svgstore -o ./src/views/partials/icons.slm ./dist/svg/*.svg --inline && svgstore -o ./dist/icons.svg ./dist/svg/*.svg --inline",
    "svgs:watch": "nodemon --ext svg --watch ./src/svg -x \"npm run svgs\"",
    "make": "node .app/make.js"
  },
  "devDependencies": {
    "ajv": "^5.5.2",
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "cssnano-cli": "^1.0.5",
    "escape-html": "^1.0.3",
    "eslint": "^4.12.1",
    "eslint-config-google": "^0.9.1",
    "express": "^4.16.2",
    "gh-pages": "^1.1.0",
    "json-sass": "^1.3.5",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "postcss": "^6.0.21",
    "pretty": "^2.0.0",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-plugin-vue": "^4.7.1",
    "rollup-watch": "^4.0.0",
    "slm": "^1.0.0",
    "svgo": "^1.0.5",
    "svgstore-cli": "^1.3.1",
    "tailwindcss": "^0.7.3",
    "uglify-js": "^3.0.15",
    "vue-template-compiler": "^2.6.6"
  },
  "dependencies": {
    "animate.scss": "0.0.6",
    "chart.js": "^2.7.3",
    "lodash-es": "^4.17.11",
    "svgstore": "^3.0.0-2",
    "vue": "^2.6.6",
    "vue-chartjs": "^3.4.0"
  },
  "babel": {
    "plugins": [
      "external-helpers",
      "lodash"
    ],
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "FB": false
    },
    "rules": {
      "one-var": 0
    }
  }
}
