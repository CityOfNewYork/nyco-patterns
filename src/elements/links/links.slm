

= mixin('links', 'code = false', 'text = Click here to learn more about tax relief for parents')
  - if this.code
    div class='${class_demo_class_containers}'
      code.code = '<a>'
    div class='${class_demo_class_containers}'
      div class='code-block'
        pre
          div = '<div class="p-3 bg-secondary-white">'
          div = '  <a href="#">' + text + '</a>'
          div = '</div>'

  div class='p-3 bg-secondary-white'
    a href='#' = text

= mixin('links-inverted', 'code = false', 'text = Click here to learn more about tax relief for parents')
  - if this.code
    div class='${class_demo_class_containers}'
      code.code = 'links-invert <a>'
    div class='${class_demo_class_containers}'
      div class='code-block'
        pre
          div = '<div class="p-3 bg-primary-navy links-invert">'
          div = '  <a href="#">' + text + '</a>'
          div = '</div>'

  div class='p-3 bg-primary-navy links-invert'
    a href='#' = text
