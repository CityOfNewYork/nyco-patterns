- pattern = 'Inputs';

/ Layout
= extend('layouts/default');

/ Variables
= partial('partials/styles.slm');
= partial('partials/links.slm');

/ Partials
= partial('partials/head.mixin.slm');
= partial('partials/nav.mixin.slm');
= partial('partials/section.mixin.slm');
= partial('partials/section-full.mixin.slm');
= partial('partials/section-text.mixin.slm');

/ Content blocks
= content('head');
  = mixin('head', pattern);

= content('header');
  = mixin('header');

= content('content');
  h1 class='${class_demo_headers}' = pattern;

  = mixin('section', 'elements/inputs/input', 'Default');
  = mixin('section', 'elements/inputs/input-error', 'Error');
  = mixin('section', 'elements/inputs/input-number', 'Number');
  = mixin('section', 'elements/inputs/input-currency-usd', 'Currency');
  = mixin('section', 'elements/inputs/input-currency-usd-error', 'Currency Error');
  = mixin('section', 'elements/inputs/input-autocomplete', 'Autocomplete');
  = mixin('section-text', 'elements/inputs/input-autocomplete.readme', 'Autocomplete Usage');

= content('script');
  javascript:
    const autocomplete = nyco.inputAutocomplete({
        // Providing a callback for the selected event.
        selected: function(value) {
            console.dir('Selected ' + value + '!');
          }
      });

    // Updating dropdown options post instantiation.
    autocomplete.options([
      ['Bronx', 'Hunts Point', 'Arthur Avenue', 'Riverside', 'Mott Haven'],
      ['Queens', 'Corona', 'East Elmhurst', 'Forest Hills', 'Fresh Pond'],
      ['Brooklyn', 'Flatbush', 'Bay Ridge', 'DUMBO', 'Williamsburg'],
      ['Staten Island', 'South Beach', 'Fort Wadsworth', 'Todt Hill', 'Great Kills'],
      ['Manhattan', 'Lower', 'Midtown', 'Chinatown', 'SoHo']
    ]);

    // Updating strings used by the
    autocomplete.strings({
      'OPTION_SELECTED': '{{ VALUE }} is selected!'
    });